@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            position: relative;
            width: 100%;
            height: 100vh;
            background-image: url('https://www.thespruce.com/thmb/fBdZ-1GHbjGBGLitWE6svejkDmo%3d/3894x2635/filters:fill(auto%2c1)/boy-doing-his-homework-at-desk-in-his-room-477712627-5935ccd73df78c08abd5abcb.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .content {
            z-index: 1;
            color:white;
        }

        h3 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.5rem;
            margin-bottom: 30px;
        }

        .decorative-line {
            width: 100px;
            height: 2px;
            background-color: white;
            margin: 0 auto 20px;
        }

        .decorative-circle {
            width: 50px;
            height: 50px;
            background-color: white;
            border-radius: 50%;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="overlay"></div>
        <div class="content">
            <h3>Student Management System</h3>
            <p>Manage your students efficiently</p>
            <div class="decorative-line"></div>
            <div class="decorative-circle"></div>
            
        </div>
    </div>
</body>
</html>
